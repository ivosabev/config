{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": ["./base.json"],
  "compilerOptions": {
    // Emit
    "declaration": true,
    // "declarationDir": "dist/dts",
    "declarationMap": true,
    // downlevelIteration
    // emitBOM
    // emitDeclarationOnly
    // importHelpers
    // inlineSourceMap
    // inlineSources
    // mapRoot
    // newLine
    "noEmit": false,
    // noEmitHelpers
    // noEmitOnError
    // "outDir": "dist/esm",
    // outFile
    // preserveConstEnums
    // removeComments
    "sourceMap": true,
    // sourceRoot
    "stripInternal": true,

    // Other
    "composite": true,
    "incremental": true,
    "lib": ["ES2023", "DOM", "DOM.Iterable"],
    "types": ["node"]
  }
}
